<!DOCTYPE html>
<html>
  <head>
    <title>Iclone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="title">
        Instaram Clone
      </div>
      <div class="login_check" >
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
        <% if logged_in? %>
          <%= link_to "Profile", user_path(current_user.id) ,class: 'btn btn-default'%>
          <%= link_to "Logout", session_path(current_user.id), method: :delete,class: 'btn btn-default' %>
        <% else %>
          <%= link_to "Sign up", new_user_path ,class: 'btn btn-default' %>
          <%= link_to "Login", new_session_path ,class: 'btn btn-default'%>
        <% end %>
      </div>
    </header>
    <div class ="content">
      <%= yield %>
    </div>
    <footer>
      <p>Â© Watahiki Masashi</p>
    </footer>
  </body>
</html>
