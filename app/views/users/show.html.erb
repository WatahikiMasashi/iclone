<% unless @user.icon.url.nil? %>
<p>
  <strong>Image:</strong>
  <%= image_tag @user.icon.url %>
</p>
<% end %>
<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>

<%= link_to '新しく投稿する', new_blog_path , class: 'btn btn-default' %><br>
<%= link_to '登録内容変更', new_user_path , class: 'btn btn-default' %><br>
<h1>お気に入り記事一覧</h1>
<% @favorites.each do |favorite| %>
  <h2><%= favorite.title %></h2>
  <p><%= favorite.content %></p>
  <p><%= favorite.user.name + "さんの投稿" %></p>
  <p><%= favorite.created_at %></p>
<%end%>
